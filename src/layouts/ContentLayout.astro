---
import Base from '@layouts/Base.astro';
import BackButton from '@components/BackButton.svelte';

import { twMerge } from 'tailwind-merge';

export interface Props {
  title: string;
  class?: string;
  [key: string]: any;
}
const { title, class: className = '', ...rest }: Props = Astro.props;
---

<Base title={title} class={twMerge('my-24', className)} {...rest}>
  <BackButton />
  <slot />
</Base>

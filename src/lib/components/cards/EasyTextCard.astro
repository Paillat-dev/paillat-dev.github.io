---
import BentoCard from "$lib/components/cards/BentoCard.astro";
import type { AstroComponentFactory } from "astro/runtime/server/index.js";
import { cn } from "$lib/utils.ts";
interface Props {
  width?: 1 | 2 | 4;
  height?: 1 | 2 | 4;
  class?: string;
  title: string;
  sub: string;
  icon?: AstroComponentFactory;
  href: string;
  brandColor: string;
  iconClass?: string;
}

const {
  width = 2,
  height = 2,
  class: className = "",
  icon: Icon,
  title,
  sub,
  href,
  brandColor,
  iconClass,
}: Props = Astro.props;
---

<BentoCard
  width={width}
  height={height}
  href={href}
  brandColor={brandColor}
  class={cn("justify-start", className)}
  iconClass={iconClass}
>
  {Icon ? <Icon slot="icon" /> : <slot name="icon" slot="icon" />}

  <div class="flex flex-col">
    <h2 class="text-xs">{title}</h2>
    <p class="text-muted-foreground text-xs">{sub}</p>
  </div>
  <slot />
</BentoCard>

---
import { cn } from "$lib/utils.ts";
import BentoCard from "$lib/components/cards/BentoCard.astro";

interface Props {
  width: 1 | 2 | 4;
  class?: string;
}

const { width, class: className = "" }: Props = Astro.props;
---

<BentoCard
  class={cn("justify-end overflow-hidden text-base font-bold border-none shadow-none", className)}
  width={width}
  height={1}
>
  <slot />
</BentoCard>
